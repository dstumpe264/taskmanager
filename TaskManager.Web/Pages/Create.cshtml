@page
@model TaskManager.Web.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="margin-top: 20px; margin-bottom: 40px;">Create To Do</h1>


<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDo.Title" class="control-label"></label>
                <input asp-for="ToDo.Title" class="form-control text-box title" />
                <span asp-validation-for="ToDo.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDo.Description" class="control-label"></label>
                <input asp-for="ToDo.Description" class="form-control text-box" />
                <span asp-validation-for="ToDo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDo.DueDate" class="control-label"></label>
                <input asp-for="ToDo.DueDate" class="form-control  text-box date" />
                <span asp-validation-for="ToDo.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDo.Notes" class="control-label"></label>
                <input asp-for="ToDo.Notes" placeholder="Notes" class="form-control text-box" />
                <span asp-validation-for="ToDo.Notes" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="display: flex; align-items: center; justify-content: end;">
                <a asp-page="Index">Cancel &nbsp;&nbsp;</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
